{% trans_default_domain 'email' %}

{% macro action_button(action_url, action_label) %}
    <table class="button">
        <tr>
            <td>
                <table>
                    <tr>
                        <td><a href="{{ action_url }}">{{ action_label }}</a></td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
{% endmacro %}


{% macro encart_vehicle(thumbnail_url, vehicleMake, vehicleModelName, vehicleMileage, vehiclePrice) %}
    <table style="margin-bottom: 20px;">
        <tr>
            <td width="200" style="border-top: 1px solid #E5E5E5; border-bottom: 1px solid #E5E5E5; border-left: 1px solid #E5E5E5;">
                <img src="{{ thumbnail_url }}" alt="{{ vehicleMake }} {{ vehicleModelName }}">
            </td>
            <td style="border-top: 1px solid #E5E5E5; border-bottom: 1px solid #E5E5E5; border-right: 1px solid #E5E5E5; padding: 15px 20px;">
                <div style="font-weight: bold; margin-bottom: 5px;">{{ vehicleMake }} {{ vehicleModelName }}</div>
                <div style="color: #7A7A7A;">{{ vehicleMileage|localizednumber }}km</div>
                {% if vehiclePrice is not null %}
                    <div style="color: #7A7A7A;">{{ vehiclePrice|localizedcurrency('EUR') }}</div>
                {% endif %}
            </td>
        </tr>
    </table>
{% endmacro %}

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" lang="en" xml:lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <meta name="viewport" content="width=device-width">
    <title>{% block title %}{% endblock %}</title>
    <!-- <style> -->
</head>
<body>
{% inlinecss '@AppBundle/Resources/css/email/email-inline.css' %}
    <span class="preheader"></span>
    <table class="body">
        <tr>
            <td class="center" align="center" valign="top">
                <center data-parsed="">
                    <table align="center" class="container float-center">
                        <tbody>
                        <tr>
                            <td>
                                <table class="row header">
                                    <tbody>
                                    <tr>
                                        <th class="logo small-12 columns first">
                                            <table>
                                                <tr>
                                                    <th>
                                                        <a href="{{ url('front_default') }}"><img src="{{ absolute_url(asset('assets/images/logo/logo-wamcar.png')) }}" alt="Wamcar"></a>
                                                    </th>
                                                </tr>
                                            </table>
                                        </th>
                                    </tr>
                                    </tbody>
                                </table>

                                <table class="row content">
                                    <tbody>
                                    <tr>
                                        <th class="small-12 large-12 columns first last">
                                            <table>
                                                <tr>
                                                    <th>
                                                        <table class="spacer">
                                                            <tbody>
                                                            <tr>
                                                                <td height="30px"
                                                                    style="font-size:30px;line-height:30px;">&#xA0;
                                                                </td>
                                                            </tr>
                                                            </tbody>
                                                        </table>
                                                        {% block welcome %}
                                                            <p>{% if username is defined and username is not empty %}
                                                                    {{ "email.hello_username"|trans({'%username%' : username}) }}
                                                                {% else %}
                                                                    {{ "email.hello"|trans }}
                                                                {% endif %}
                                                            </p>
                                                        {% endblock %}

                                                        {% block body %}{% endblock %}

                                                        {% block wamcar_signature %}
                                                            <p>{{ "email.signature"|trans|raw }}</p>{% endblock %}
                                                    </th>
                                                    <th class="expander"></th>
                                                </tr>
                                            </table>
                                        </th>
                                    </tr>
                                    </tbody>
                                </table>

                            </td>
                        </tr>
                        </tbody>
                    </table>

                    <table align="center" class="container footer-container float-center">
                        <tbody>
                        <tr>
                            <td>
                                <table class="spacer">
                                    <tbody>
                                    <tr>
                                        <td height="40px" style="font-size:40px;line-height:40px;">&#xA0;</td>
                                    </tr>
                                    </tbody>
                                </table>
                                <table class="row collapse">
                                    <tbody>
                                    <tr>
                                        <th class="small-12 large-12 columns first last">
                                            <table>
                                                <tr>
                                                    <th>
                                                        <p>{{ 'email.footer.legal'|trans }}</p>
                                                        <p>{{ 'email.footer.manage_preference'|trans({'%edit_preference_url%':url('front_user_edit_preferences') })|raw }}</p>
                                                        <p>{{ 'email.footer.copyright'|trans|raw }}</p>
                                                    </th>
                                                    <th class="expander"></th>
                                                </tr>
                                            </table>
                                        </th>
                                    </tr>
                                    </tbody>
                                </table>
                                <table class="spacer">
                                    <tbody>
                                    <tr>
                                        <td height="40px" style="font-size:40px;line-height:40px;">&#xA0;</td>
                                    </tr>
                                    </tbody>
                                </table>
                            </td>
                        </tr>
                        </tbody>
                    </table>

                </center>
            </td>
        </tr>
    </table>
    <!-- prevent Gmail on iOS font size manipulation -->
    <div style="display:none; white-space:nowrap; font:15px courier; line-height:0;"> &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;
        &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;
        &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;
    </div>
{% endinlinecss %}
</body>
</html>
