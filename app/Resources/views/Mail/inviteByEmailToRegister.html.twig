{% extends ':Mail/Layout:email.html.twig' %}

{% trans_default_domain 'email' %}
{% from ':Mail/Layout:email.html.twig' import action_button %}

{% set mainAdministrator = garage.mainAdministrator %}

{% block title %}{{ 'inviteByEmailToRegister.object'|trans({
    '%administrator_fullname%': mainAdministrator.fullname
}) }}{% endblock %}

{% block body %}
    <div>
        {{ 'inviteByEmailToRegister.body'|trans({
            '%administrator_fullname%': mainAdministrator.fullname,
            '%administrator_url%': mainAdministrator|userInfoUrl({}, true)
        })|raw }}
        {{ action_button(url('register',{'type':constant("Wamcar\\User\\ProUser::TYPE")}), 'inviteByEmailToRegister.action.register'|trans) }}
    </div>
{% endblock %}
