{% set breadcrumb_container_class = breadcrumb_container_class|default('') %}

<div class="row {{ breadcrumb_container_class }}">
    <ol class="breadcrumb is-flex no-bullet column show-for-medium" itemscope itemtype="http://schema.org/BreadcrumbList">
        <li itemprop="itemListElement" itemscope itemtype="http://schema.org/ListItem">
            <a itemprop="item" href="{{ path('front_default') }}"><span itemprop="name">{{ 'breadcrumb.home'|trans }}</span></a>
            <meta itemprop="position" content="1" />
        </li>
        {% if breadcrumbs is defined %}
            {% for breadcrumb in breadcrumbs %}
                <li itemprop="itemListElement" itemscope itemtype="http://schema.org/ListItem">
                    <a itemprop="item" href="{{ breadcrumb.href }}"><span itemprop="name">{{ breadcrumb.name }}</span></a>
                    <meta itemprop="position" content="{{ loop.index + 1  }}" />
                </li>
            {% endfor %}
        {% endif %}
    </ol>
</div>
