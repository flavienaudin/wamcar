{% extends 'front/Layout/includes/navigation/primary.html.twig' %}

{% set pageSearch = is_logged %}
{% set page_garage = is_user_pro|default(false) %}
{% set pageMessage = is_logged %}
{% set page_profil = is_logged %}

{% set pathGarage = is_user_pro and app.user.garage ? path('front_garage_view', {'id': app.user.garage.id}) : path('front_garage_create') %}

{% set navigation_class = 'is-flex small-right' %}
{% set navigation_items = [
    {
        slug: '',
        label: 'Recherche un v√©hicule',
        icon: 'search',
        current: pageSearch
    },
    {
        slug: pathGarage,
        label: 'Mon Garage',
        icon: 'garage',
        current: page_garage
    },
    {
        slug: '',
        label: 'Messagerie',
        icon: 'message',
        current: pageMessage
    },
    {
        slug: path('front_view_current_user_info'),
        label: 'Profil',
        icon: 'user',
        current: page_profil
    }
] %}

{% block navigation %}

    {% for item in navigation_items %}
        <a href="{{ item.slug }}" class="l-navigation-item is-logged {{ item.current ? 'is-active' : ''  }} l-header-button icon-{{ item.icon }} body-font-color l-header-button">
            <b class="show-for-xlarge">{{ item.label }}</b>
        </a>
    {% endfor %}

{% endblock %}
