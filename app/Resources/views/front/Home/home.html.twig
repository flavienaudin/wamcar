{% extends 'front/Layout/layout.html.twig' %}

{% set is_home_page = true %}
{% set header_class = 'is-transparent is-fixed' %}

{% block bodyClass %}home-wrapper{% endblock %}

{% block mainClass %}has-no-scroll no-padding{% endblock %}

{% block title %}Accueil{% endblock %}

{% block body %}

    <section class="vehicle-form-container small-12">
        <div class="row">
            {% include 'front/Home/includes/vehicle_form.html.twig' %}
        </div>
    </section>

    <section class="section reinsurance-container small-12">
        <div class="row">
            {% include 'front/Layout/includes/reinsurance/reinsurance.html.twig' %}
        </div>
    </section>

    <section class="section small-12">
        <div class="row">
            <header class="small-12 text-center">
                <h2 class="section-title h1 primary-color">Je cherche une nouvelle voiture</h2>
                <p>Découvrez les véhicules d’occasion vendus par des professionnels vérifiés</p>
            </header>
            {% include 'front/Vehicle/Listing/includes/filter.html.twig' %}
            <strong class="black-color h2 column small-12">Les dernières offres publiées sur Wamcar</strong>
            {% set vehicleToList = last_vehicles %}
            {% set balise = 'h3' %}
            {% include 'front/Vehicle/Listing/includes/list.html.twig' %}
            <footer class="section-footer column small-12 medium-7 large-5">
                <a href="{{ path('front_search_personal') }}" class="button">Découvrez tous les véhicules près de chez vous</a>
            </footer>
            </div>
        </div>
    </section>

    <section class="reinsurance-wamcar-container section small-12">
        <div class="row">
            <h2 class="section-title white-color h1 column text-center medium-text-left small-12 medium-9 large-8 medium-order-1">Je veux remplacer mon véhicule. Qu’est-ce que Wamcar m’apporte ?</h2>
            {% set reinsurance_class = 'medium-order-3' %}
            {% include 'front/Layout/includes/reinsurance/reinsurance_user.html.twig' %}
            <button type="button" class="reinsurance-video-button icon-play small-right medium-order-2" data-open="js-modal-concept-video"><b>Le concept <span class="show-for-medium"><br></span> en vidéo</b></button>
            {% include 'front/Home/includes/modal_concept_video.html.twig' %}
        </div>
    </section>

    <section class="mission block-dark-blue small-12">
        <div class="row">
            {% include 'front/Home/includes/our_mission.html.twig' %}
        </div>
    </section>

    <section class="business small-12">
        <div class="block-white section row">
            {% include 'front/Home/includes/business.html.twig' %}
        </div>
    </section>

{% endblock body %}
