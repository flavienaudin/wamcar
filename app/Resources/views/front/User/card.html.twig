{% extends 'front/Seller/card.html.twig' %}

{% block title %}Mon profil{% endblock %}

{% block presentation %}
    <h2>Présentation</h2>
    {% if user.description %}
        <p>{{ user.description|nl2br }}</p>
    {% elseif userIsMe %}
        <p>Présentez-vous en quelques mots.</p>
    {% else %}
        <p>Aucune description n'a été encore renseignée.</p>
    {% endif %}
    {% if userIsMe %}
        <a href="{{ path('front_edit_user_info') }}" class="text-underline">Modifier mes informations</a>
    {% endif %}
{% endblock %}

{% block other_informations %}
    <h2>Son projet</h2>
    {% if user.project.budget %}
        {% if user.project.budget %}
            <p><strong class="primary-color">Budget de {{ user.project.budget|number_format(0, ',', ' ') }} €</strong></p>
        {% endif %}
        {% if user.project.isFleet == true %}
            <p>Il s'agit d'une flotte.</p>
        {% endif %}
        <ul class="list-bullet">
            {% for projectVehicle in user.project.projectVehicles %}
                <li>{{ projectVehicle.make }} {{ projectVehicle.model }}
                    {{ (projectVehicle.yearMax) ? '/ '~projectVehicle.yearMax~"+ " : '' }}
                    {{ (projectVehicle.mileageMax) ? '/ '~projectVehicle.mileageMax|number_format(0, ',', ' ')~" km" : '' }}
                </li>
            {% endfor %}
        </ul>
        <p>{{ user.project.description|nl2br }}</p>
    {% else %}
        Aucun projet renseigné
    {% endif %}
    <a href="{{ path('front_edit_project_user') }}" class="text-underline">Gérer mon projet</a>
{% endblock %}

{% block vehicle %}
    {% if iCanSeeUserVehicles %}
        <div class="separator small-12 section">
            <h2>{{ userIsMe ? "Mes": "Ses" }} véhicules en vente</h2>
            <div class="row">
                {% set balise = 'h3' %}
                {% set vehicleToList = user.vehicles %}
                {% set isProVehicles = false %}
                {% include 'front/Vehicle/Listing/includes/list.html.twig' %}
            </div>

            {% if userIsMe %}
                <div class="small-12 medium-6 large-4">
                    <a href="#{#{ path('front_vehicle_personal_add') }#}" class="button add icon-plus">Ajouter un véhicule</a>
                </div>
            {% endif %}
        </div>
    {% endif %}
{% endblock %}
