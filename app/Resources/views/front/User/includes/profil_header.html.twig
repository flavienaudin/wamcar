<aside class="profil-header small-12">
    <header class="row text-center medium-text-left align-middle">
        <div class="column small-12 medium-shrink medium-order-2 medium-collapse">
            <h1 class="profil-name">{{ user.name }}</h1>
            <div class="profil-action">
                {% if isUserProPageProfil %}
                    {% if user.phonePro %}
                        <a href="tel:+33{{ user.phonePro }}" class="icon-tel small-6 medium-shrink"><span class="dark-gray-color">{{ user.phonePro }}</span></a>
                    {% endif %}
                    {% if user.userProfile.phone %}
                        <a href="tel:+33{{ user.userProfile.phone }}" class="icon-mobile small-6 medium-shrink"><span class="dark-gray-color">{{ user.userProfile.phone }}</span></a>
                    {% endif %}
                {% endif %}

                {% if not userIsMe %}
                    <a href="" class="icon-message small-12 medium-shrink"><span class="text-underline">Envoyer un message</span></a>
                {% else %}
                    <a href="{{ path('security_logout') }}" class="text-underline show-for-medium">DÃ©connexion</a>
                {% endif %}
            </div>
        </div>
        <div class="column medium-shrink medium-order-1">
            <span class="profil-image">
                <img src="{{ user|avatar }}" alt="{{ user.name }}" width="100%">
            </span>
        </div>
    </header>
</aside>

