<form data-abide novalidate>
    <strong class="h3 input-margin black-color is-block">J'ai un compte {{ site_name }}</strong>
    <div>
        <label for="email">Email</label>
        <input type="email" name="email" id="email" class="input" required>
        <small class="form-error">Veuillez indiquer votre adresse email.</small>
    </div>
    <div>
        <label for="password">Mot de passe <a data-open="js-password-lost">Mot de passe oubli√© ?</a></label>
        <input type="password" name="password" id="password" class="input" required>
        <small class="form-error">Veuillez indiquer votre mot de passe.</small>
    </div>
    <div class="input-margin">
        <button type="submit" class="button full-width">Connexion</button>
    </div>
