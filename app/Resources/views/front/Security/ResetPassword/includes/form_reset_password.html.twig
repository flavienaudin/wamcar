<form data-abide novalidate class="input-margin block-grid small-12">
    <div class="column small-12 medium-6 large-4">
        {% include 'front/Layout/includes/forms/input.html.twig' with {
            label: 'Mot de passe',
            type: 'password',
            name: 'reset-password',
            required: true,
            required_message: 'Veuillez indiquer votre nouveau mot de passe'
        } %}
    </div>
    <div class="column small-12 medium-6 large-4">
        {% include 'front/Layout/includes/forms/input.html.twig' with {
            label: 'Confirmation du mot de passe',
            type: 'password',
            name: 'reset-password-confirm',
            required: true,
            required_message: 'Veuillez confirmer votre nouveau mot de passe'
        } %}
    </div>
    <div class="column small-12 medium-6 large-4">
        <label class="is-invisible show-for-large">Valider</label>
        <button type="submit" class="button full-width">Valider ce mot de passe</button>
    </div>
</form>
