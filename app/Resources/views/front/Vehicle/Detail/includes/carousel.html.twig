<ul id="{{ carouselId }}" class="js-carousel carousel carousel-vehicle-pictures {% if carouselClass is defined %}{{ carouselClass }}{% endif %}"  {% if modalIdToOpen is defined %}data-open="{{ modalIdToOpen }}"{% endif %}>
    {% for picture in vehicle.pictures %}
        <li>
            <img src="{{ picture|vehiclePicture('vehicle_picture') }}" alt="{{ vehicle.name ~ ' ' ~ vehicle.cityName }}">
            {# La l√©gende sera reprise dans l'attribut alt de la navigation (ci-dessous et ci-dessus) #}
            {% if picture.caption %}
                <p class="vehicle-carousel-legend text-center">{{ picture.caption }}</p>
            {% endif %}
        </li>
    {% else %}
        <li>
            <img src="{{ 'vehicle_placeholder_picture'|defaultVehiclePicture }}" alt="default vehicle picture">
        </li>
    {% endfor %}
</ul>

{% if carouselNavigationId is defined and vehicle.pictures|length > 1 %}
    <nav id="{{ carouselNavigationId }}" class="carousel carousel-navigation">
    {% for picture in vehicle.pictures %}
        <img src="{{ picture|vehiclePicture('vehicle_mini_thumbnail') }}" alt="{{ vehicle.name ~ ' ' ~ vehicle.cityName }}">
    {% else %}
        <li>
            <img src="{{ 'vehicle_mini_thumbnail'|defaultVehiclePicture }}" alt="default vehicle picture">
        </li>
    {% endfor %}
    </nav>
{% endif %}