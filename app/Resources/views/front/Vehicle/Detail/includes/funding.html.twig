{% set titleClass = titleClass|default('separator medium primary-color') %}

<h2 class="{{ titleClass }}">{{ 'vehicle.section.funding.title'|trans }}</h2>
<ul class="vehicle-funding-list list-border tiny no-bullet no-margin">
    {% if vehicle.catalogPrice %}
        <li class="block-grid">
            <strong class="small-12 medium-4 large-5 xlarge-3">{{ "vehicle.section.funding.catalogPrice.label"|trans}}</strong>
            <span class="small-12 medium-auto">{{ vehicle.catalogPrice|localizednumber }}â‚¬</span>
        </li>
    {% endif %}
    {% if vehicle.discount %}
        <li class="block-grid">
            <strong class="small-12 medium-4 large-5 xlarge-3">{{ "vehicle.section.funding.discount.label"|trans}}</strong>
            <span class="small-12 medium-auto">{{ vehicle.discount|localizednumber }}%</span>
        </li>
    {% endif %}
    {% if vehicle.funding %}
        <li class="block-grid">
            <strong class="small-12 medium-4 large-5 xlarge-3">{{ "vehicle.section.funding.funding.label"|trans}}</strong>
            <span class="small-12 medium-auto">{{ vehicle.funding.key|trans([], 'enumeration') }}</span>
        </li>
    {% endif %}
    {% if vehicle.otherFunding %}
        <li class="block-grid">
            <strong class="small-12 medium-4 large-5 xlarge-3">{{ "vehicle.section.funding.otherFunding.label"|trans}}</strong>
            <span class="small-12 medium-auto">{{ vehicle.otherFunding|raw|nl2br }}</span>
        </li>
    {% endif %}
</ul>



