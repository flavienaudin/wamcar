<header class="vehicle-header block-grid column small-12 align-middle">
    <h1 class="small-12 medium-auto">{{ vehicle.name }}</h1>
    <strong class="h1 medium-shrink medium-right primary-color">{{ vehicle.price }}</strong>
    <p class="small-12">
        {{ vehicle.modelVersionName }} &nbsp;
        <span class="primary-color">{{ vehicle.years }}, {{ vehicle.mileage }}</span> &nbsp;
        <span class="black-color">{{ vehicle.cityName }}</span>
    </p>
</header>
