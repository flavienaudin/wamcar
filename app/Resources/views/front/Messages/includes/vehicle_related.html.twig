<!-- Vehicle related : encart bleue -->
{% if vehicle.isPro %}
    {% set path = path('front_vehicle_pro_detail', {'slug': vehicle.slug}) %}
{% else %}
    {% set path = path('front_vehicle_personal_detail', {'slug': vehicle.slug}) %}
{% endif %}

<div class="messages-item-vehicle-proposed block-grid">
    <a href="{{ path }}" target="_blank">
        <img src="{{ vehicle.mainPicture|vehiclePicture('vehicle_mini_thumbnail') }}" alt="{{ vehicle.name }}">
    </a>
    <div class="messages-item-vehicle-proposed-infos">
        <strong class="messages-small-text primary-color">
            <a href="{{ vehicleSeller|userInfoUrl }}" target="_blank">
                {{ vehicle.isPro ?
                    'conversation.vehicle_presented_by'|trans({'%ownerName%':vehicleSeller.fullName}) :
                    ( vehicle.seller.id == app.user.id ?
                            'conversation.my_vehicle'|trans:
                            'conversation.personal_vehicle_of'|trans({'%ownerName%':vehicleSeller.fullName})
                    )
                }}
            </a>
        </strong>
        <div class="messages-item-vehicle-proposed-model">
            <a href="{{ path }}" target="_blank">
                <strong>{{ vehicle.make|vehicleMakeFormat('make') }} {{ vehicle.modelName|vehicleModelFormat('model') }}</strong> <span>{{ vehicle.engineName }}</span>
            </a>
        </div>
        <div class="messages-small-text messages-item-vehicle-proposed-model-infos">
            <a href="{{ path }}" target="_blank">
                {{ vehicle.years }}, {{ vehicle.mileage|localizednumber }}km, {{ vehicle.cityName|upper }}
            </a>
        </div>
    </div>
</div>
