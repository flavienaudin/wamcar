<!-- Message answer -->
<div class="messages-item-answer">
    {{ form_start(messageForm, { 'attr' : { 'novalidate': 'novalidate'} }) }}

    <label id="message-answer">{{ labelName }}</label>
    {{ form_widget(messageForm.content, {
        'label': 'Message',
        'placeholder': 'Entrez votre message...',
        'class': 'no-margin',
        'required': true
    }) }}
    {% if messageForm.vehicle is defined %}
        {{ form_widget(messageForm.vehicle, {
            'isNew': currentConversation == null ? true : false
        }) }}
    {% endif %}
    {% if messageForm.selectVehicle is defined %}
        {{ form_widget(messageForm.selectVehicle, {
            'label': 'Sélectionner un véhicule proposé',
            'class': 'messages-create-vehicle-btn text-underline'
        }) }}
    {% endif %}
    {% if messageForm.createVehicle is defined %}
        {{ form_widget(messageForm.createVehicle, {
            'label': 'Créer un véhicule',
            'class': 'messages-create-vehicle-btn text-underline'
        }) }}
    {% endif %}
    <div class="block-grid">
        {{ form_widget(messageForm.send, {
            'label': 'Envoyer le message',
            'class': 'small-12 medium-10 large-6 messages-send-btn button'
        }) }}
    </div>
    {{ form_end(messageForm) }}
</div>
