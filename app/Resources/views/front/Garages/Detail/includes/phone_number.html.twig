<{{ balise  }}>
    <span class="show-for-medium phone-number-link {{ icontel|default('icon-tel') }} {{ buttonClass|default('') }}">
        <span class="js-see-number text-underline" id="PC{{ phoneNumber_eventId }}" data-href="{{ path('front_show_number') }}">{{ "global.button.see_phone_number"|trans }}</span>
