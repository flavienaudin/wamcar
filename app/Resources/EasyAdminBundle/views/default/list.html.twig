{% extends '@!EasyAdmin/default/list.html.twig' %}

{% block item_actions %}
    {% set filtered_actions = {} %}
    {% for action_name, action_config in _list_item_actions %}
        {% if not ( (action_name == 'viewUserProfile' or action_name == 'viewGaragePage' ) and item.deletedAt|default(null) is not null ) %}
            {# remove the 'viewUserProfile' action from softDeleted items #}
            {% set filtered_actions = filtered_actions|merge([action_config]) %}
        {% endif %}
    {% endfor %}

    {% set _list_item_actions = filtered_actions %}

    {{ parent() }}
{% endblock item_actions %}